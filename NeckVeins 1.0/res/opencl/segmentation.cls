		value += matrix[x  + y * Nx + zVar * Nx * Ny] * gaussKernel[size - i - 1];
	}
	result[x + y * Nx + z * Nx * Ny] = value;
   	
}

kernel void findMax(global const float* matrix, global const int* dimensions, local float* scratch, global float* max) {
	int globalIndex = get_global_id(0);
	int length = dimensions[0] * dimensions[1] * dimensions[2];
	float accumulator = 0;
	float tmpValue = 0;
	while(globalIndex < length) {
		tmpValue = matrix[globalIndex];
		if (tmpValue > accumulator)
			accumulator = tmpValue;
		globalIndex += get_global_size(0);
	}

    int localIndex = get_local_id(0);
    scratch[localIndex] = accumulator;
    barrier(CLK_LOCAL_MEM_FENCE);
    for(int offset = get_local_size(0) / 2; offset > 0; offset = offset / 2) {
        if (localIndex < offset) {
            float other = scratch[localIndex + offset];
            float mine = scratch[localIndex];
            scratch[localIndex] = (mine > other) ? mine : other;
        }
        barrier(CLK_LOCAL_MEM_FENCE);
    }

    if (localIndex == 0) {
        max[get_group_id(0)] = scratch[0];
    }
}

kernel void otsuHistogram(global const float* matrix, global const int* dimensions,global const float* max, global int* otsuValues) {
	local int otsuLocal[256];
	
	const int length = dimensions[0] * dimensions[1] * dimensions[2];
	int localBuffSize = 256; 
	int globalIndex = get_global_id(0);
	int localIndex = get_local_id(0);
	
	while (localIndex < localBuffSize) {
		otsuLocal[localIndex] = 0;
		localIndex += get_local_size(0);
	}
	localIndex = get_local_id(0);
	
	
	barrier(CLK_LOCAL_MEM_FENCE);
	
    while(globalIndex < length) {
		int index = (int)round(matrix[globalIndex] / max[0] * 255);
		atom_inc(&otsuLocal[index]);
		globalIndex += get_global_size(0);
	}
    
	barrier(CLK_LOCAL_MEM_FENCE | CLK_GLOBAL_MEM_FENCE);
    
	while (localIndex < localBuffSize) {
		atomic_add(&otsuValues[localIndex], otsuLocal[localIndex]);
		localIndex += get_local_size(0);
	}
	
   
}
   
