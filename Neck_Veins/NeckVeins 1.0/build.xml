    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.7"/>
    <property name="source" value="1.7"/>
    
       <target name="init">
          <delete dir="bin"/>
       	 <mkdir dir="bin"/>
       <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="res">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
      
  <target  depends="init"   name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac encoding="cp1252" debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <src path="res"/>
            <classpath refid="NeckVeins 1.0.classpath"/>
        </javac>
    </target>
      
    <target depends="build-project" name="create_run_jar">
  
        <delete dir="platform_build"/>
        <mkdir dir="platform_build/program/veins_lib"/>
        
             
       <jar destfile="platform_build/program/veins.jar">
