     	<copy todir="platform_build/program/lwjgl-2.9.3" >     <fileset dir="lwjgl-2.9.3" includes="**"/>  </copy>
 	  <copy todir="platform_build/program/gradient" >     <fileset dir="gradient" includes="**"/>  </copy>
