<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <!-- WINDOW CONTROL -->
    <controlDefinition name="MY_USER_MANUAL_DIALOG_CONTROL" style="nifty-window" childRootId="#window-content"
                       controller="de.lessvoid.nifty.controls.window.WindowControl" revert="false" drop="false"
                       handle="#window-bar">
                       
         <panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="100%" height="100%" valign="top" align="left" >
               <interact onClick="bringToFront()" onClickMouseMove="drag()" onRelease="dragStop()"/>
                	
			  <effect>
			    <onActive name="border" border="1px,1px,1px,1px" color="#353535ff" timeType="infinite"/>
			  </effect>
			  
             <!-- TOP BAR -->
                 <panel id="" backgroundImage="imgs\pngs720p\Med3D-40.png" imageMode="normal" childLayout="horizontal" width="100%" height="27px" valign="top" align="left" >      	
                	<image  childLayout="center" filename="imgs\pngs720p\Med3D-39.png" width="44px" height="100%" valign="center" align="left" filter="true"/>
                	<control name="label" align = "left" style="STYLE_TOP_MENU_DROPDOWN_BUTTON_LABEL" margin="0px,0px,0px,0px" width="60px" text="About" height="100.0%" font="aurulent-sans-16.fnt"/>
		            <panel id="" childLayout="horizontal" width="*" height="100.0%" style="STYLE_COMMON_INVISIBLE"  valign="center" align="left"  />  
		            <control name="button" id="" style="STYLE_TOP_MENU_WINDOW_BUTTONS" childLayout="center" valign="top" label="" align="right" height="15px" width="17px"  backgroundImage="imgs\pngs720p\Med3D-25.png"  filter="true" >
						 <interact onClick="On_UserManualDialog_Close()"/>        	
						    <effect>
								<onHover name="imageOverlay" filename="imgs/pngs720p/Med3D-33.png" imageMode="normal" post="true" />
								<onClick name="imageOverlay" filename="imgs/pngs720p/Med3D-30.png" imageMode="normal" post="true" />
							</effect>	
					</control> 					
           		 </panel> 
           		 
              <!-- MAIN CONTAINER PANEL -->
              
              <panel id="" childLayout="center" width="100%" height="*" valign="center" align="center" backgroundColor="#76787bff">         
              	
              	<panel id="" childLayout="vertical" margin="1%,0.7%,1%,0.7%" width="98.6%" height="98%" valign="center" align="center" backgroundColor="#ccccccff">         
              		
              		<panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="100%" height="1%" valign="top" align="left"/>                     			 
              			
	              	<!-- top text and icon -->
	              	<panel id="" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="100%" height="10%" valign="top" align="left">         
	              			<panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="1%" height="100%" valign="top" align="left"/>         
	              			<image  childLayout="center" filename="imgs\pngs720p\Med3D-19.png" width="48px" height="48px" valign="center" align="left" filter="true"/>
	                		<panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="1%" height="100%" valign="top" align="left"/>         
	              	
	                		<panel id="" childLayout="vertical" style="STYLE_COMMON_INVISIBLE" width="*" height="100%" valign="top" align="left">         
	              				  <panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="100%" height="*" valign="top" align="left"/>                     	
	              				  <control name="label" id="" style="STYLE_LABEL_DARK_TEXT" width="*" text="University of Ljubljana" textHAlign="left" height="25.0%"/>
								  <control name="label" id="" style="STYLE_LABEL_DARK_TEXT" width="*" text="Faculty of Computer and Information Science" textHAlign="left" height="25.0%"/>
							      <control name="label" id="" style="STYLE_LABEL_DARK_TEXT" width="*" text="Laboratory for Computer Graphics and Multimedia" textHAlign="left" height="25.0%"/>
								  <panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="100%" height="*" valign="top" align="left"/>         
	              	
	              			</panel>
	              	</panel>
	              	
	              	<!-- HTML panels -->
	              	<panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="horizontal" width="100%" height="*" valign="center" align="center" >         
              			
              			<panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="*" height="100%" valign="top" align="left"/>                     	
	              				 
              			<panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="center" width="45%" height="95%" valign="center" align="center" >         
              				<panel id="HTML_LEFT" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="100%" height="100%" valign="center" align="center" />         
              			
              				 <effect>
						    	<onActive name="border" border="1px,1px,1px,1px" color="#353535ff" timeType="infinite"/>
						  	</effect>
              			</panel>
              			
              			<panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="5%" height="100%" valign="top" align="left"/>                     			 
              			
