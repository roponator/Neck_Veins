						   		 <onActive name="border" border="1px,1px,1px,1px" color="#353535ff" timeType="infinite"/>
						 	 </effect>
              			</panel>
              			
              			<panel id="PADDING" childLayout="horizontal" style="STYLE_COMMON_INVISIBLE" width="*" height="100%" valign="top" align="left"/>                     	
	              				 
              			
              		</panel>
              		
              	</panel>
              </panel>
              
            
              		              
 		</panel>
 	
    </controlDefinition>
</nifty-controls>