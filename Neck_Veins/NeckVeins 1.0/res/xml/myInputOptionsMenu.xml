<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <!-- WINDOW CONTROL -->
    <controlDefinition name="MY_INPUT_OPTIONS_CONTROL" style="nifty-window" childRootId="#window-content"
                       controller="de.lessvoid.nifty.controls.window.WindowControl" revert="false" drop="false"
                       handle="#window-bar">
                       
         <panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="100%" height="100%" valign="top" align="left" >
               <interact onClick="bringToFront()" onClickMouseMove="drag()" onRelease="dragStop()"/>
                	
			  <effect>
			    <onActive name="border" border="1px,1px,1px,1px" color="#353535ff" timeType="infinite"/>
			  </effect>
			  
             <!-- TOP BAR -->
                 <panel id="" backgroundImage="imgs\pngs720p\Med3D-40.png" imageMode="normal" childLayout="horizontal" width="100%" height="27px" valign="top" align="left" >      	
                	<image  childLayout="center" filename="imgs\pngs720p\Med3D-39.png" width="44px" height="100%" valign="center" align="left" filter="true"/>
                	<control name="label" align = "left" style="STYLE_TOP_MENU_DROPDOWN_BUTTON_LABEL" margin="0px,0px,0px,0px" width="60px" text="Input Options" height="100.0%" font="aurulent-sans-16.fnt"/>
		            <panel id="" childLayout="horizontal" width="*" height="100.0%" style="STYLE_COMMON_INVISIBLE"  valign="center" align="left"  />  
		            <control name="button" id="" style="STYLE_TOP_MENU_WINDOW_BUTTONS" childLayout="center" valign="top" label="" align="right" height="15px" width="17px"  backgroundImage="imgs\pngs720p\Med3D-25.png"  filter="true" >
						 <interact onClick="On_InputOptionsDialog_Close()"/>        	
						    <effect>
								<onHover name="imageOverlay" filename="imgs/pngs720p/Med3D-33.png" imageMode="normal" post="true" />
								<onClick name="imageOverlay" filename="imgs/pngs720p/Med3D-30.png" imageMode="normal" post="true" />
							</effect>	
					</control> 					
           		 </panel> 
           		 
              <!-- MAIN CONTAINER PANEL -->
              <panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="100%" height="*" valign="top" align="left" backgroundImage="imgs/col2.png">
                 
                  <!-- SLIDERS PANEL -->
				<panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="100%" height="130px" valign="top" align="left" >
                  	<panel childLayout="center" width="100%" height="100%" style="STYLE_COMMON_INVISIBLE" align="center" valign="center" >
                    	<panel childLayout="vertical" width="95%" height="95%" style="STYLE_COMMON_INVISIBLE" align="center" valign="center"  backgroundImage="imgs/col1.png">
		                     <control childLayout="vertical" id="INPUT_inputSens" name="MyHorizontalSlider" align="center" width="100%" height="50px" margin="10px,0px,0px,0px"/>    
		                     <control childLayout="vertical" id="INPUT_leapSens" name="MyHorizontalSlider" align="center" width="100%" height="50px" margin="10px,0px,0px,0px"/>    
		                 </panel> 
               		 </panel>
                </panel>
                
				 <control id="checkbox_NavWASD" name="MY_CHECKBOX" width="50%" height="26px" align="left" margin="0%,0%,0%,2.5%" />
             <control id="checkbox_NavARROWS" name="MY_CHECKBOX" width="50%" height="26px" align="left" margin="0%,0%,0%,2.5%" />
            
				
				<control name="label"style="STYLE_LABEL_DARK_TEXT" margin="2%,2%,2%,2%" width="96%" height="20px" text="Input Method" textHAlign="left"  />			               		
         		<control id="INPUT_METHOD_DROPDOWN" name="dropDown"  margin="2%,4%,2%,4%" width="92%" height = "20px" align="left" vertical="no" horizontal="optional" selection="Single" displayItems="3"  />          
		
         		<panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="100%" height="10px" valign="top" align="left" />
                
         		
         		<control name="label"style="STYLE_LABEL_DARK_TEXT" margin="2%,2%,2%,2%" width="96%" height="20px" text="Move Type" textHAlign="left"  />			               		
         		<control id="MOVE_TYPE_METHOD_DROPDOWN" name="dropDown"  margin="2%,4%,2%,4%" width="92%" height = "20px" align="left" vertical="no" horizontal="optional" selection="Single" displayItems="2"  />          
		
                 
				  <!-- Buttons -->
				<panel id="" style="STYLE_COMMON_INVISIBLE"  margin="3%,0%,0%,0%" childLayout="horizontal" width="100%" height="15%" valign="center" align="left"  >
				   	 	 <panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="4%" height="100%" valign="top" align="left" />				  		
				   	 	<control id="" name="button" label="Cancel" >
				   		      <interact onClick="onButton_InputSettingsDialog_Cancel()"/> 
				   		 </control>
				   		 <panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="*" height="100%" valign="top" align="left" />
				  		 <control id="" name="button" label="OK" >
				   		      <interact onClick="onButton_InputSettingsDialog_OK()"/> 
				   		 </control>
				   		  <panel id="" style="STYLE_COMMON_INVISIBLE" childLayout="vertical" width="4%" height="100%" valign="top" align="left" />
				  		
                </panel>
                   
              </panel>
              		              
 		</panel>
 	
    </controlDefinition>
</nifty-controls>